{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@maxjustus/chttp/native": ["./native/index.ts"],
      "@maxjustus/chttp/tcp": ["./tcp_client/index.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rewriteRelativeImportExtensions": true
  },
  "include": ["index.ts", "native/index.ts", "tcp_client/index.ts"]
}
